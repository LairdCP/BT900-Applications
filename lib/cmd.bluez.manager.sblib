		//print the hcitool dc help menu
		print "Usage:\n"
		print "		dc <bdaddr> [reason]\n"
		
		exitfunc 1
		
		else
			tkn$ = strdehexize$(tkn$)
			rc = BtcGetHandleFromBDAddr(tkn$,hcSpp)
			rc = BtcSppDisconnect(hcSpp)
		endif
	endwhile
endfunc 5

